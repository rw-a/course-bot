{
  // Most ts-node options can be specified here using their programmatic names.
  "ts-node": {
    "swc": true,
    "compilerOptions": {}
  },
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ESNext"],

    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "events/*.ts"
  ]
}